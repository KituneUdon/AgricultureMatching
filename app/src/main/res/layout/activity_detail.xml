<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.s162132.agriculture.DetailActivity">

    <Button
        android:text="戻る"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="名前："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="24dp"/>

        <TextView
            android:text="名前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:textSize="24dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="職業："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewJob1"
            android:layout_weight="1"
            android:textSize="24dp"/>

        <TextView
            android:text="職業"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewJob2"
            android:textSize="24dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="日時："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24dp"
            android:layout_weight="1" />

        <TextView
            android:text="日時"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDay"
            android:textSize="24dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="開始時刻："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24dp"
            android:layout_weight="1" />
        <TextView
            android:text="時刻"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStartTime"
            android:textSize="24dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="終了時刻："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView41"
            android:textSize="24dp"
            android:layout_weight="1" />
        <TextView
            android:text="終了時刻"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFinishTime"
            android:textSize="24dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="場所："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24dp"
            android:layout_weight="1" />
        <TextView
            android:text="場所"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPlace"
            android:textSize="24dp"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="内容："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView5"
            android:textSize="24dp"/>
        <TextView
            android:text="内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewContent"
            android:layout_weight="1"
            android:textSize="24dp"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="持ち物："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24dp"
            android:layout_weight="1" />
        <TextView
            android:text="持ち物"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBelongings"
            android:textSize="24dp"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="服装："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="24dp"
            android:layout_weight="1" />

        <TextView
            android:text="服装"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewClothes"
            android:textSize="24dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="メールアドレス："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="24dp"
            android:layout_weight="1" />

        <Button
            android:text="メールを送信"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSentMail"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
            android:text="Mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMail"
            android:textSize="24dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="電話番号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="24dp"
            android:layout_weight="5" />

        <Button
            android:text="電話を掛ける"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCall"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="Phone Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPhone"
        android:textSize="24dp" />
</LinearLayout>
